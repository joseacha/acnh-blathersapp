<MainWindow>:
    topTitle: title
    infoPage: info
    submitButton: button
    blathersIcon: image
    bottomLabel: copyright
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.239, 0.353, 0.502, 1
        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        Image:
            id: image
            canvas:
                Rectangle:
                    pos:self.pos
                    size:self.size
                    source:'imgs/blathers.png'

        Label:
            id: title
            text: "Welcome to\nBlathers!"
            font_size: 0.099 * self.width


    TextInput:
        id: info
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        text: "Press 'retrieve button' to get list of current fishes available"
        readonly: False

    BoxLayout:
        size_hint: [1, .15]
        Label:

            pos: 1,0
            text: "  "
            font_size: 7
    SmoothButton:
        id: button
        on_press:root.btnPress()
        text: "Retrieve"
#        font_size: 124 - self.width
        size_hint: (0.9,0.5)
#        height: 80
#        width: 100
        size: self.width, self.height
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
#        padding: 5
#        spacing: 5
        back_color: (0.157, 0.455, 0.753, 1)
    BoxLayout:
        size_hint: [1, .15]
        Label:
            id: copyright
    #        pos_hint: {'center_x': 0.5, 'center_y': 0}
    #        size_hint:0,0
            pos: 1,0
            text: "             Created by Jose Acha-Camacho\nFor use with Animal Crossings: New Horizon (May 2020)"
            font_size: 9

<SmoothButton@Button>:
    background_color: (0,0,0,0)
    background_normal: ''
    back_color: (1,0,1,1)
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius
